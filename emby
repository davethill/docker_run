docker run -d \
    --name emby \
    --volume /home/dave/docker/appdata/emby:/config \
    --volume /mnt/eopsin:/mnt/share \
    --net=host \
    --device /dev/dri:/dev/dri \
    --publish 8096:8096 \
    --publish 8920:8920 \
    --env UID=1000 \
    --env GID=100 \
    --env GIDLIST=100 \
    --env NVIDIA_VISIBLE_DEVICES=all \
    emby/embyserver:latest
